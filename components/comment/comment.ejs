                <div class="quiz-admin-header">
                    <h1>
                        <%= channel && channel.channelName ? channel.channelName + ' ' : '' %>
                            <span>&rsaquo;</span>
                            <%= session && session.name ? session.name + ' ' : '' %>
                                <span>&rsaquo;Comment Manager
