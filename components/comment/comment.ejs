                    <div class="quiz-admin-controls">
                        <% if (!quizQuestions || quizQuestions.length===0) { %>
                            <button
                                onclick="window.open('/tvstation/comment/channels/<%= channelId %>/session/<%= sessionId %>/addcommentquestion', '_blank')"
                                class="btn">
                                + Create a New Comment Event
                            </button>
                            <% } %>
