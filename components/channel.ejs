<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Channels List</title>
    <link rel="stylesheet" href="/css/sales.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
</head>

<body style="padding: 0">




    <!-- Add / Edit Show Popup -->
    <div id="popup-add-edit-show" class="popup-overlay" style="display: none;">
        <div class="popup-content" style="position: relative; max-width: 500px; width: 90%;">
            <span id="close-popup-show"
                style="position: absolute; top: 10px; right: 15px; font-size: 25px; cursor: pointer;">&times;</span>
            <h2 id="show-popup-header" style="text-align: center; margin-bottom: 20px;">Add New Show</h2>

            <form id="add-edit-show-form" enctype="multipart/form-data">
                <input type="hidden" name="showId" id="show-id" value="">
                <input type="hidden" name="removeLogo" id="remove-show-logo-flag" value="false">



                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="text" id="show-name" name="name" placeholder="Show Name" required />
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="text" id="session-logo-title" name="logoTitle" placeholder="Logo Title (optional)">
                </div>

                <!-- Description -->
                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea id="session-description" name="description" placeholder="Session Description" rows="3"
                        style="resize: vertical;"></textarea>
                </div>

                <!-- Link -->
                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="url" id="session-link" name="link" placeholder="Optional Link">
                </div>
                <!-- Logo Upload -->
                <div class="form-group" style="margin-bottom: 20px; position: relative;">
                    <input type="file" id="show-logo" name="logo" accept="image/*" style="display: none;">
                    <label for="show-logo" class="stylish-file-label" id="show-logo-label">Choose Logo</label>

                    <div id="show-logo-preview-container" style="margin-top: 10px; display: none; position: relative;">
                        <span id="clear-show-logo-btn" class="clear-logo-btn"
                            title="Remove selected image">&times;</span>
                        <img id="show-logo-preview" src="" alt="Logo Preview"
                            style="max-width: 100%; max-height: 150px; border-radius: 10px;">
                    </div>
                </div>

                <div class="form-group" style="text-align: center;">
                    <button type="submit" class="btn" id="submit-add-edit-show">Save Show</button>
                </div>
            </form>
        </div>
    </div>



    <div class="modern-list-container">
        <h2>Shows</h2>
        <div style="display: flex; justify-content: end;">
            <button id="add-channel-btn" class="btn primary" style="margin-bottom: 16px;">
                + Add New Show
            </button>
        </div>

        <% const pageNum=Number(currentPage); const invalidPage=isNaN(pageNum) || pageNum> totalPages || pageNum < 1; %>

                <% if (invalidPage && totalPages> 0) { %>
                    <%- include('../components/404') %>
                        <% } else if (channels && channels.length> 0) { %>

                            <!-- Total Count Display -->
                            <p><strong>Total Shows:</strong>
                                <%= totalChannels %>
                            </p>

                            <div class="list-wrapper">
                                <div class="list-header">
                                    <th>Logo</th>
                                    <span>Name</span>
                                    <span>Go</span>
                                    <span>Edit</span>
                                    <span>Delete</span>
                                </div>

                                <ul class="user-list">
                                    <% channels.forEach(channel=> {
                                        const logoUrl = channel.logo ? channel.logo : '/uploads/no-image.png';
                                        %>

                                        <li class="user-item">
                                            <span>
                                                <% if(channel.logo && channel.link) { %>
                                                    <a href="<%= channel.link %>" target="_blank">
                                                        <img src="<%= logoUrl %>" alt="<%= channel.channelName %>"
                                                            class="channel-logo">
                                                    </a>
                                                    <% } else { %>
                                                        <img src="<%= logoUrl %>" alt="<%= channel.channelName %>"
                                                            class="channel-logo">
                                                        <% } %>
                                            </span>
                                            <span>
                                                <%= channel.channelName %>
                                            </span>

                                            <span>
                                                <button class="btn go-btn"
                                                    onclick="location.href='channels/<%= channel._id %>/sessions'">Go</button>
                                            </span>

                                            <span>
                                                <button class="btn edit-btn" data-id="<%= channel._id %>"
                                                    data-logo-title="<%= channel.logoTitle %>"
                                                    data-description="<%= channel.description %>"
                                                    data-link="<%= channel.link %>"
                                                    data-logo-url="<%= channel.logo %>">Edit</button>
                                            </span>

                                            <span>
                                                <button class="btn delete-btn"
                                                    data-id="<%= channel._id %>">Delete</button>

                                            </span>
                                        </li>

                                        <% }) %>
                                </ul>
                            </div>

                            <!-- Pagination Controls -->
                            <div class="pagination-container">
                                <% if (pageNum> 1) { %>
                                    <a href="?page=<%= pageNum - 1 %>" class="pagination-btn prev-btn">Prev</a>
                                    <% } %>

                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <% if (i===pageNum) { %>
                                                <span class="pagination-btn active-page">
                                                    <%= i %>
                                                </span>
                                                <% } else { %>
                                                    <a href="?page=<%= i %>" class="pagination-btn">
                                                        <%= i %>
                                                    </a>
                                                    <% } %>
                                                        <% } %>

                                                            <% if (pageNum < totalPages) { %>
                                                                <a href="?page=<%= pageNum + 1 %>"
                                                                    class="pagination-btn next-btn">Next</a>
                                                                <% } %>
                            </div>

                            <% } else { %>
                                <p class="no-data-message">No channels found.</p>
                                <% } %>
    </div>

</body>

<script src="/js/channel.js"></script>



</html>