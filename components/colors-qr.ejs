    <script>
        const qrCodesMap = {};
        const qrCodes = [
            { _id: 1, qrName: "Black", code: "https://magic-code.net/OSN6U4", qrDotColor: "black" },
            { _id: 2, qrName: "White", code: "https://magic-code.net/AT91GS", qrDotColor: "white", backgroundColor: "black" },
            { _id: 3, qrName: "Magenta", code: "https://magic-code.net/HFT9P4", qrDotColor: "#FF0093" },
            { _id: 4, qrName: "Violet", code: "https://magic-code.net/KCIRDK", qrDotColor: "#835EC7" },
            { _id: 5, qrName: "Green", code: "https://magic-code.net/YDD268", qrDotColor: "#00B760" },
            { _id: 6, qrName: "Pink", code: "https://magic-code.net/FVFLUW", qrDotColor: "#FC70BA" },
            { _id: 7, qrName: "Blue", code: "https://magic-code.net/0JM9HX", qrDotColor: "#1C00FF" },
            { _id: 8, qrName: "Red", code: "https://magic-code.net/666YK6", qrDotColor: "#FF0000" },
            { _id: 9, qrName: "Orange", code: "https://magic-code.net/IZIKZM", qrDotColor: "#FFC62C" },
            { _id: 10, qrName: "Cyan", code: "https://magic-code.net/DOV8Z0", qrDotColor: "#00AEEF" },
            { _id: 11, qrName: "Turquoise", code: "https://magic-code.net/A2KPPA", qrDotColor: "#4CCED1" },
        ];

        const titles = document.querySelectorAll('.card-title');

        qrCodes.forEach((data, index) => {
            // Set name
            if (titles[index]) {
                titles[index].innerHTML = data.qrName;
            }

            // Set URL in anchor
            const link = document.getElementById(`qr-container-${data._id}`);
            if (link) {
                link.href = data.code;
                link.target = "_blank";
            }
        });

        function showQrCodes(qrCodes) {
            qrCodes.forEach((qrCodeData) => {
                const qrContainer = document.getElementById(`qr-container-${qrCodeData._id}`);

                if (qrContainer) {
                    const qrCode = new QRCodeStyling({
                        width: 400,
                        height: 400,
                        type: "canvas",
                        image: '/images/logo.jpg',
                        data: qrCodeData.code,
                        dotsOptions: {
                            color: qrCodeData.qrDotColor || "#000000",
                            type: 'rounded' // Change 'square' to 'rounded'
                        },
                        cornersSquareOptions: {
                            type: 'dot' // Set corners to dot style
                        },
                        backgroundOptions: {
                            color: qrCodeData.backgroundColor || "#ffffff"
                        },
                        imageOptions: {
                            crossOrigin: 'anonymous',
                            margin: 10
                        }
                    });

                    qrContainer.innerHTML = "";

                    const wrapper = document.createElement("div");
                    wrapper.style.position = "relative";
                    wrapper.style.display = "inline-block";

                    const qrCanvasDiv = document.createElement("div");
                    wrapper.appendChild(qrCanvasDiv);

                    qrCode.append(qrCanvasDiv);
                    qrContainer.appendChild(wrapper);

                    qrCodesMap[qrCodeData._id] = qrCode;
                }
            });
        }

        showQrCodes(qrCodes);
    </script>


<script>
  const langSelector = document.querySelector('.language-selector');
  const selectedLang = document.querySelector('.selected-lang');
  const dropdownItems = document.querySelectorAll('.language-dropdown li');

  langSelector.addEventListener('click', () => {
    langSelector.classList.toggle('active');
  });

  dropdownItems.forEach(item => {
    item.addEventListener('click', (e) => {
      const lang = e.target.getAttribute('data-lang');
      selectedLang.textContent = lang;
      langSelector.classList.remove('active');
    });
  });

  // Optional: Click outside to close dropdown
  document.addEventListener('click', (e) => {
    if (!langSelector.contains(e.target)) {
      langSelector.classList.remove('active');
    }
  });
</script>
