<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Response Tracker</title>
    <link rel="stylesheet" href="/css/sales.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet" />
</head>

<body style="padding: 0px;">

    <nav class="breadcrumbs">
        <a href="/tvstation/broadcasters/list">Broadcasters</a>
        <span>&rsaquo;</span>
        <a href="/tvstation/channels?broadcasterId=<%=broadcasterId %>">Projects</a>
        <span>&rsaquo;</span>
        <a href="/tvstation/channels/<%= channelId %>/sessions">Episodes</a>
        <span>&rsaquo;</span>
        <a href="/tvstation/channels/<%= channelId %>/session/<%= sessionId %>">Events</a>
        <span>&rsaquo;</span>
        <a href="/tvstation/portfolio/channels/<%= channelId %>/session/<%= sessionId %>/portfolio">Portfolio</a>
        <span>&rsaquo;</span>
        <span class="active">Portfolio Responses</span>
    </nav>

    <% if (error) { %>
        <div class="quiz-admin-error" style="margin: 20px;">
            <%= error %>
        </div>
        <% } else { %>
            <% const pageNum=Number(currentPage); const invalidPage=isNaN(pageNum) || pageNum> totalPages || pageNum <
                    1; %>

                    <div class="modern-list-container">
                        <h2>Quiz Response Tracker</h2>

                        <% if (invalidPage && totalPages> 0) { %>
                            <%- include('../components/404') %>
                                <% } else if (portfolioResponses && portfolioResponses.length> 0) { %>

                                    <div style="display: flex; justify-content: space-between;">

                                        <p><strong>Total Responses:</strong>
                                            <%= totalResponsesExcludingNoResponse %>
                                        </p>

                                        <p><strong>Total Scans:</strong>
                                            <%= qrScanCount %>
                                        </p>
                                    </div>

                                    <div class="list-wrapper">
                                        <div class="list-header" id="applause-quiz-tracking-header">
                                            <span>Question</span>
                                            <span>User</span>
                                            <span>Email</span>
                                            <span>Answer</span>
                                            <span>Link</span>
                                            <span>Time</span>
                                        </div>

                                        <ul class="user-list">
                                            <% portfolioResponses.forEach(resp=> {
                                                const formattedDate = new Date(resp.createdAt).toLocaleString("en-GB", {
                                                day: '2-digit', month: '2-digit', year: 'numeric',
                                                hour: '2-digit', minute: '2-digit'
                                                });
                                                %>
                                                <li class="user-item">
                                                    <span>
                                                        <%= resp.questionText || "â€”" %>
                                                    </span>
                                                    <span>
                                                        <%= resp.userName %>
                                                    </span>
                                                    <span>
                                                        <%= resp.userEmail %>
                                                    </span>
                                                    <span>
                                                        <%= resp.isNoResponseGiven ? "N/A" : `Option
                                                            ${resp.selectedOptionIndex + 1}` %>
                                                    </span>
                                                    <span>
                                                        <% if (resp.selectedLink) { %>
                                                            <a href="<%= resp.selectedLink %>" style="display: flow;"
                                                                target="_blank">
                                                                <%= resp.selectedLink.length> 30 ?
                                                                    resp.selectedLink.substring(0, 30) + "..." :
                                                                    resp.selectedLink %>
                                                            </a>
                                                            <% } else { %>
                                                                N/A
                                                                <% } %>
                                                    </span>
                                                    <span>
                                                        <%= formattedDate %>
                                                    </span>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>

                                    <div class="pagination-container">
                                        <% if (pageNum> 1) { %>
                                            <a href="?page=<%= pageNum - 1 %>" class="pagination-btn prev-btn">
                                                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                                                    <path d="M15 19L8 12L15 5" />
                                                </svg>
                                            </a>
                                            <% } %>

                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <% if (i===pageNum) { %>
                                                        <span class="pagination-btn active-page">
                                                            <%= i %>
                                                        </span>
                                                        <% } else { %>
                                                            <a href="?page=<%= i %>" class="pagination-btn">
                                                                <%= i %>
                                                            </a>
                                                            <% } %>
                                                                <% } %>

                                                                    <% if (pageNum < totalPages) { %>
                                                                        <a href="?page=<%= pageNum + 1 %>"
                                                                            class="pagination-btn next-btn">
                                                                            <svg width="22" height="22"
                                                                                viewBox="0 0 24 24" fill="currentColor">
                                                                                <path d="M9 5L16 12L9 19" />
                                                                            </svg>
                                                                        </a>
                                                                        <% } %>
                                    </div>

                                    <% } else { %>
                                        <div style="display: flex; justify-content: space-between;">

                                            <p><strong>Total Responses:</strong>
                                                <%= totalResponsesExcludingNoResponse %>
                                            </p>

                                            <p><strong>Total Scans:</strong>
                                                <%= qrScanCount %>
                                            </p>
                                        </div>
                                        <p class="no-data-message">No quiz responses yet.</p>
                                        <% } %>
                    </div>


                    <% } %>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.12.0/toastify.min.js"></script>
<script src="/js/toastify-setup.js"></script>

</html>