<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern List View</title>
    <link rel="stylesheet" href="/css/sales.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
</head>

<body style="padding: 0px;">
    <!-- Navbar Placeholder -->
    <!-- Include navbar HTML here -->

    <% const pageNum=Number(currentPage); const invalidPage=isNaN(pageNum) || pageNum> totalPages || pageNum < 1; %>

            <div class="modern-list-container">
                <h2>Sales</h2>

                <% if (invalidPage && totalPages> 0) { %>
                    <%- include('../components/404') %>

                        <% } else if (usedByUsers && usedByUsers.length> 0) { %>

                            <!-- Total Sales Display -->
                            <p><strong>Total Sales:</strong>
                                <%= usedByUsers.length %>
                            </p>

                            <div class="list-wrapper">
                                <div class="list-header">
                                    <span>Name</span>
                                    <span>Email</span>
                                    <span>Earned</span>
                                    <span>Coupon</span>
                                </div>
                                <ul id="userList" class="user-list">
                                    <% usedByUsers.forEach(user=> { %>
                                        <li class="user-item">
                                            <span>
                                                <%= user.fullName %>
                                            </span>
                                            <span>
                                                <%= user.email %>
                                            </span>
                                            <span>
                                                <%= user.commissionAmount %>
                                            </span>
                                            <span>
                                                <%= user.couponCode %>
                                            </span>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>

                            <!-- Pagination Controls -->
                            <div class="pagination-container">
                                <% if (pageNum> 1) { %>
                                    <a href="?section=sales&page=<%= pageNum - 1 %>" class="pagination-btn prev-btn">
                                        <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M15 19L8 12L15 5" />
                                        </svg>
                                    </a>
                                    <% } %>

                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <% if (i===pageNum) { %>
                                                <span class="pagination-btn active-page">
                                                    <%= i %>
                                                </span>
                                                <% } else { %>
                                                    <a href="?section=sales&page=<%= i %>" class="pagination-btn">
                                                        <%= i %>
                                                    </a>
                                                    <% } %>
                                                        <% } %>

                                                            <% if (pageNum < totalPages) { %>
                                                                <a href="?section=sales&page=<%= pageNum + 1 %>"
                                                                    class="pagination-btn next-btn">
                                                                    <svg width="22" height="22" viewBox="0 0 24 24"
                                                                        fill="currentColor">
                                                                        <path d="M9 5L16 12L9 19" />
                                                                    </svg>
                                                                </a>
                                                                <% } %>
                            </div>

                            <% } else { %>
                                <p class="no-data-message">No one used coupon yet.</p>
                                <% } %>
            </div>



            <script src="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.12.0/toastify.min.js"></script>
            <script src="/js/toastify-setup.js"></script>

</body>

</html>