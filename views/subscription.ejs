                    <li id="DiscountedRate12">Add coupon code to see discounted Rate</li>

                    <li id="DiscountedPrice12">Add coupon code to see discount</li>
                </ul>
                <button onclick="ShowDiscount('12')">ADD COUPON CODE</button>
            </div>
        </div>


    </div>



    <script>

        function ShowDiscount(plan) {

            if (plan == "0.5") {
                document.getElementById("DiscountedRate0.5").innerHTML = "Discount Rate: 100%"
                document.getElementById("DiscountedPrice0.5").innerHTML = "Discounted Price: 0,-"
                document.getElementById("DiscountedMainPrice0.5").innerHTML = "0,-"
            }


            if (plan == "3") {
                document.getElementById("DiscountedRate3").innerHTML = "Discount Rate: 12,5%"
                document.getElementById("DiscountedPrice3").innerHTML = "Discounted Price: 7,-"
                document.getElementById("DiscountedMainPrice3").innerHTML = "7,-"
            }

            if (plan == "6") {
                document.getElementById("DiscountedRate6").innerHTML = "Discount Rate: 15%"
                document.getElementById("DiscountedPrice6").innerHTML = "Discounted Price: 9,35-"
                document.getElementById("DiscountedMainPrice6").innerHTML = "9,35-"
            }

            if (plan == "12") {
                document.getElementById("DiscountedRate12").innerHTML = "Discount Rate: 17,5%"
                document.getElementById("DiscountedPrice12").innerHTML = "Discounted Price: 12,-"
                document.getElementById("DiscountedMainPrice12").innerHTML = "12,-"
            }




        }



        function ShowAllPlans(e) {

            document.getElementById("otherPlans").style.display = "contents"
            document.getElementById("15dayplan").classList.remove("days")
            e.style.display = "none"


        }
    </script>
</body>

</html>