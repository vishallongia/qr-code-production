                <h2>3 Months Plan</h2>
                <div class="price">
                    <div class="big" id="DiscountedMainPrice3">8,-</div>
                </div>
                <!-- <p>Includes everything in our Free package plus:</p> -->
                <ul>
                    <li>5 Magic Codes</li>
                    <li>Unlimited access</li>
                    <li>All Features</li>
                    <!-- <li>Discount Rate: 12,5%</li> -->
                    <li id="DiscountedRate3">Add coupon code to see discounted Rate</li>

                    <li id="DiscountedPrice3">Add coupon code to see discount</li>
                </ul>
                <button onclick="ShowDiscount('3')">ADD COUPON CODE</button>
            </div>
            <div class="package package_silver">
                <h2>6 Months Plan</h2>
                <!-- <div class="price">£<div class="big">10</div>/mo</div> -->
                <div class="price">
                    <div class="big" id="DiscountedMainPrice6">11,-</div>
                </div>
                <!-- <p>Includes everything in our Bronze package plus:</p> -->
                <ul>
                    <li>5 Magic Codes</li>
                    <li>Unlimited access</li>
                    <li>All Features</li>
                    <!-- <li>Discount Rate: 15%</li> -->
                    <li id="DiscountedRate6">Add coupon code to see discounted Rate</li>
                    <li id="DiscountedPrice6">Add coupon code to see discounted Price</li>
