<script>
    const searchInput = document.querySelector('.search-input');
    const searchLoading = document.getElementById('search-loader-row');
    const userList = document.getElementById('userList');
    const paginationContainer = document.getElementById('pagination-container');
    const notFoundPage = document.getElementById('no-user-found');
    let redirectTimer;

    searchInput.addEventListener('input', () => {
        if (redirectTimer) clearTimeout(redirectTimer);

        // Hide elements if they exist
        if (searchLoading) searchLoading.style.display = 'none';
        if (userList) userList.style.display = 'none';
        if (paginationContainer) paginationContainer.style.display = 'none';
        if (notFoundPage) notFoundPage.style.display = 'none';

        const value = searchInput.value.trim();

        if (value !== '') {
            // ✅ Show loading row only if it exists
            if (searchLoading) searchLoading.style.display = 'block';

            redirectTimer = setTimeout(() => {
                window.location.href = `/admindashboard/vip-users?search=${encodeURIComponent(value)}`;
            }, 2000); // 2 second
        }
    });

    // Blur event — redirect to dashboard if field left empty
    searchInput.addEventListener('blur', () => {
        const value = searchInput.value.trim();

        if (value === '') {
            window.location.href = '/admindashboard/vip-users';
        }
    });

    document.addEventListener("change", async (e) => {
        const checkbox = e.target.closest(".winner-declaration-checkbox");
        if (!checkbox) return;

        const userId = checkbox.getAttribute("data-user-id");
        const isChecked = checkbox.checked;

        if (!userId) {
            showToast("User ID not found", "error");
            return;
        }

        try {
            document.querySelector(".fullscreen-loader").style.display = "flex";

            const res = await fetch(`approve-to-draw-winner/${userId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ allow: isChecked })
            });

            const data = await res.json();

            if (data.success) {
                showToast(data.message || "Updated successfully", "success");
            } else {
                showToast(data.message || "Failed to update", "error");
                checkbox.checked = !isChecked; // rollback if error
            }
        } catch (err) {
            console.error(err);
            showToast("Something went wrong", "error");
            checkbox.checked = !isChecked; // rollback if error
        } finally {
            document.querySelector(".fullscreen-loader").style.display = "none";
        }
    });


</script>

</html>