<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern List View</title>
    <!-- Standard favicon -->
    <link rel="icon" type="image/png" sizes="192x192" href="/app-icon-192.png">

    <!-- Apple Touch Icon (for iOS home screen) -->
    <link rel="apple-touch-icon" href="/app-icon-192.png">

    <!-- Android Chrome Web App Manifest (optional but useful for PWAs) -->
    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
</head>

<body>
    <!-- Include the Navbar Partial -->
    <%- include('../components/navbar') %>

        <div id="theme-popup-vip-details" class="popup-overlay" style="display: none;">
            <div class="popup-content" style="position: relative;">
                <span id="close-popup-get-paid" style="
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 25px;
        cursor: pointer;
    ">&times;</span>

                <p>Enter Details</p>

                <form onsubmit="return false;">
                    <!-- Coupon Code Input -->


                    <!-- Number of QR Codes Allowed -->
                    <div class="form-group" style="margin-bottom: 16px;">
                        <input type="number" id="vip-qr-limit" placeholder="Enter number of Magic Codes allowed"
                            style="width: 100%;" />
                    </div>

                    <!-- Subscription Valid Till Date -->
                    <div class="form-group" style="margin-bottom: 24px;">
                        <input type="date" id="vip-valid-till" placeholder="Enter valid till date"
                            style="width: 100%;" />
                    </div>

                    <!-- Assign Button -->
                    <button id="vip-assign-btn" type="button">
                        Assign
                    </button>
                </form>
            </div>
        </div>

        <div class="modern-list-container">
            <% const pageNum=Number(currentPage); const invalidPage=isNaN(pageNum) || pageNum> totalPages || pageNum <
                    1; %>

                    <% if (invalidPage && totalPages> 0) { %>
                        <%- include('../components/404') %>
                            <% } else if (users && users.length> 0) { %>

                                <h2>Media Partner Users List</h2>
                                <div class="search-bar-container">
                                    <form method="GET" action="">
                                        <input type="text" name="search" class="search-input"
                                            placeholder="Search by name or email..."
                                            value="<%= typeof search !== 'undefined' ? search : '' %>">
                                        <button type="submit" class="search-btn">Search</button>

                                        <% if (typeof search !=='undefined' && search.trim() !=='' ) { %>
                                            <a href="/admindashboard/vip-users" class="clear-btn">Clear</a>
                                            <% } %>
                                    </form>
                                </div>
                                <div class="list-wrapper">
                                    <div class="list-header" id="vip-list-header">
                                        <span>Name</span>
                                        <span>Email</span>
                                        <span>Password</span>
                                        <span>Action</span>
                                        <span>Winner Declaration</span>
                                        <span>Vip</span>
                                        <span>Affiliate</span>
                                        <span>MC's</span>
                                        <span>MC Count</span>
                                        <span>Login</span>
                                        <span>Registration Time</span>

                                    </div>
                                    <div id="search-loader-row"
                                        style="display: none; text-align: center; padding: 20px; font-family: var(--font-family); color: var(--text-color); font-size: 16px;">
                                        Searching... Please wait<span class="dot">.</span><span
                                            class="dot">.</span><span class="dot">.</span>
                                    </div>
                                    <ul id="userList" class="user-list">
                                        <% users.forEach(user=> { %>
                                            <li class="user-item" id="vip-user-list">
                                                <span>
                                                    <%= user.fullName %>
                                                </span>
                                                <span>
                                                    <%= user.email %>
                                                </span>
                                                <span>
                                                    <%= user.userPasswordKey %>
                                                </span>
                                                <span style="display: flex; flex-flow: column; gap: 5px;">
                                                    <button class="view-qr-btn">
                                                        View
                                                    </button>
                                                </span>
                                                <span>
                                                    <% if (user.isTvStation) { %>
                                                        <label class="toggle-switch">
                                                            <input type="checkbox" class="winner-declaration-checkbox"
                                                                data-user-id="<%= user._id %>" <%=user.tvStationRules &&
                                                                user.tvStationRules.isApprovedByAdminToDrawWinner
                                                                ? 'checked' : '' %>>
                                                            <span class="toggle-slider"></span>
                                                        </label>
                                                        <% } %>
                                                </span>
                                                <span>
                                                    <% if (user.subscription && user.subscription.isVip) { %>
                                                        <span class="vip-badge">VIP</span>
                                                        <% } else { %>
                                                            <button class="view-qr-btn make-vip-btn"
                                                                data-user-id="<%= user._id %>">Make
                                                                Vip</button>
                                                            <% } %>
                                                </span>
                                                <span>
                                                    <% if (user.role==="affiliate" ) { %>
                                                        <span class="vip-badge">Affiliate</span>
                                                        <% } else { %>
                                                            <button class="view-qr-btn make-affiliate-btn"
                                                                data-user-id="<%= user._id %>">Make
                                                                Affiliate</button>
                                                            <% } %>
                                                </span>

                                                <span>
                                                    <button class="view-qr-btn"
                                                        onclick="window.location.href='/admindashboard/qr/<%= user._id %>'">
                                                        View MC Link
                                                    </button>
                                                </span>
                                                <span style="display: flex; justify-content: center;">
                                                    <%= user.qrCount %>
                                                </span>
                                                <span>
                                                    <button class="view-qr-btn"
                                                        onclick="window.open('<%= user.magicLink %>', '_blank')">
                                                        Login
                                                    </button>
                                                </span>
                                                <span>
                                                    <%= (()=> {
                                                        const d = new Date(user.createdAt);
                                                        if (isNaN(d)) return "Invalid Date";
                                                        const day = d.getDate().toString().padStart(2, '0');
                                                        const month = (d.getMonth() + 1).toString().padStart(2,
                                                        '0');
                                                        const year = d.getFullYear();
                                                        let hours = d.getHours();
                                                        const minutes = d.getMinutes().toString().padStart(2,
                                                        '0');
                                                        const ampm = hours >= 12 ? 'PM' : 'AM';
                                                        hours = hours % 12 || 12;
                                                        return `${day}/${month}/${year} ${hours}:${minutes}
                                                        ${ampm}`;
                                                        })() %>
                                                </span>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>

                                <% if (totalPages> 1) { %>
                                    <div class="pagination-container" id="pagination-container">
                                        <% if (pageNum> 1) { %>
                                            <a href="?page=<%= pageNum - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                                                class="pagination-btn prev-btn">
                                                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                                                    <path d="M15 19L8 12L15 5" />
                                                </svg>
                                            </a>
                                            <% } %>

                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <% if (i===pageNum) { %>
                                                        <span class="pagination-btn active-page">
                                                            <%= i %>
                                                        </span>
                                                        <% } else { %>
                                                            <a href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                                                                class="pagination-btn">
                                                                <%= i %>
                                                            </a>
                                                            <% } %>
                                                                <% } %>

                                                                    <% if (pageNum < totalPages) { %>
                                                                        <a href="?page=<%= pageNum + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"
                                                                            class="pagination-btn next-btn">
                                                                            <svg width="22" height="22"
                                                                                viewBox="0 0 24 24" fill="currentColor">
                                                                                <path d="M9 5L16 12L9 19" />
                                                                            </svg>
                                                                        </a>
                                                                        <% } %>
                                    </div>

                                    <% } %>

                                        <% } else { %>
                                            <div class="modern-list-container">
                                                <div class="search-bar-container">
                                                    <form method="GET" action="">
                                                        <input type="text" name="search" class="search-input"
                                                            placeholder="Search by name or email..."
                                                            value="<%= typeof search !== 'undefined' ? search : '' %>">
                                                        <button type="submit" class="search-btn">Search</button>

                                                        <% if (typeof search !=='undefined' && search.trim() !=='' ) {
                                                            %>
                                                            <a href="/admindashboard/vip-users"
                                                                class="clear-btn">Clear</a>
                                                            <% } %>
                                                    </form>
                                                </div>
                                                <% if (typeof search !=='undefined' && search.trim() !=='' ) { %>
                                                    <div id="search-loader-row"
                                                        style="display: none; text-align: center; padding: 20px; font-family: var(--font-family); color: var(--text-color); font-size: 16px;">
                                                        Searching... Please wait<span class="dot">.</span><span
                                                            class="dot">.</span><span class="dot">.</span>
                                                    </div>
                                                    <p class="no-data-message" id="no-user-found">No Vip user
                                                        found for your search.
                                                    </p>
                                                    <% } else { %>
                                                        <p class="no-data-message">No Vip users created yet.</p>
                                                        <% } %>
                                            </div>
                                            <% } %>
        </div>
        </div>

        <div class="fullscreen-loader">
            <div class="loader"></div>
            <p class="animated-text">Please wait<span>.</span><span>.</span><span>.</span></p>
        </div>
</body>
