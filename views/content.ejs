    <script>
        let deferredPrompt = null;

        const isUserLoggedIn = () => {
            return <%= JSON.stringify(isLoggedIn) %>;
        };

        const isAppInstalled = () => {
            return window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone === true;
        };

        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            checkAndShowPopup();
        });

        function checkAndShowPopup() {
            const installPopup = document.getElementById('install-popup');
            const registerPopup = document.getElementById('register-popup');

            // if (isUserLoggedIn() && deferredPrompt && !isAppInstalled()) {
            //     setTimeout(() => {
            //         popup.style.display = 'flex';
            //     }, 3000);
            // }



            if (isUserLoggedIn()) {
                if (deferredPrompt && !isAppInstalled()) {
                    setTimeout(() => {
                        installPopup.style.display = 'flex';
                        registerPopup.style.display = 'none';
                    }, 3000);
                }
            } else {
                setTimeout(() => {
                    registerPopup.style.display = 'flex';
                }, 3000);
            }
        }

        document.getElementById('install-now').addEventListener('click', () => {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    console.log(choiceResult.outcome === 'accepted'
                        ? 'User accepted the install'
                        : 'User dismissed the install');
                    deferredPrompt = null;
                    document.getElementById('install-popup').style.display = 'none';
                });
            }
        });

        document.getElementById('install-later').addEventListener('click', () => {
            document.getElementById('install-popup').style.display = 'none';
            window.location.href = "https://magic-code.net/"
        });

        document.getElementById('close-popup').addEventListener('click', () => {
            document.getElementById('install-popup').style.display = 'none';
        });

        // Hide if user clicks outside content
        window.addEventListener('click', (event) => {
            const popup = document.getElementById('install-popup');
            if (event.target === popup) {
                popup.style.display = 'none';
            }
        });

        // Just in case the beforeinstallprompt wasn't fired for some reason
        if (isUserLoggedIn() && !isAppInstalled()) {
            // Wait and check again for deferredPrompt in case it's delayed
            setTimeout(() => {
                if (deferredPrompt) checkAndShowPopup();
            }, 4000);
        }


        // Register popup handlers
        document.getElementById('register-ok').addEventListener('click', () => {
            window.location.href = "https://magic-code.net/register"; // Update to your actual registration link
        });

        document.getElementById('close-register-popup').addEventListener('click', () => {
            document.getElementById('register-popup').style.display = 'none';
        });

        // Hide popup if user clicks outside content
        window.addEventListener('click', (event) => {
            const installPopup = document.getElementById('install-popup');
            const registerPopup = document.getElementById('register-popup');
            if (event.target === installPopup) {
                installPopup.style.display = 'none';
            }
            if (event.target === registerPopup) {
                registerPopup.style.display = 'none';
            }
        });


        document.addEventListener('DOMContentLoaded', () => {
            const backBtn = document.getElementById('back-home-btn');

            if (backBtn) {
                backBtn.addEventListener('click', () => {
                    let check = isUserLoggedIn()

                    window.location.href = check
                        ? "https://magic-code.net/magiccode"
                        : "https://magic-code.net/mc-addon-login";
                });
            }
        });
    </script>


